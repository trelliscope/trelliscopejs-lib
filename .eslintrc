{
  "parser": "@typescript-eslint/parser",
  "extends": ["airbnb", "prettier", "airbnb-typescript", "eslint:recommended", "plugin:@typescript-eslint/recommended"],
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "overrides": [
    {
      "files": ["*.ts", "*.tsx"],
      // move the extends array out of the overrides once all js files are gone and the overrides are removed
      "extends": ["airbnb", "prettier", "airbnb-typescript", "eslint:recommended", "plugin:@typescript-eslint/recommended"],
      "parserOptions": {
        "project": "./tsconfig.json"
      }
    }
  ],
  "env": {
    "browser": true,
    "jest": true
  },
  "plugins": ["react-hooks"],
  "rules": {
    "no-underscore-dangle": 0,
    "no-nested-ternary": 0,
    "react/forbid-prop-types": 0,
    "class-methods-use-this": 0,
    "function-paren-newline": 0,
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx", ".ts", ".tsx"] }],
    "react-hooks/rules-of-hooks": "error",
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "js": "never",
        "jsx": "never",
        "ts": "never",
        "tsx": "never"
      }
    ]
  }
}
